.row.form-field{class: "#{form.has_error?(method) ? "form-field--error " : ""}form-field--#{method}" }
  .col.form-field__label
    - label_options = options[:label] || {}
    = form.label method, label_options[:text], label_options
  .col
    = yield
    = form.field_errors method, full_message: options[:full_message]
