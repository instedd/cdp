:javascript
  (function() {
    allCheckboxes().on('change', function(e) {
      toggleBulkActions();
    });

    // initial bulk actions state
    toggleBulkActions();
  })();

  function allCheckboxes() {
    return $("input[type='checkbox'][name='sample_ids[]']");
  }

  function actions() {
    return [
      $("#bulk-print"),
      $("#bulk-destroy")
    ];
  }

  function toggleBulkActions() {
    var selectedNone = selectedCheckboxes().length == 0;
    actions().forEach(function(action) {
      action.prop('disabled', selectedNone);
    });
  }

  function selectedCheckboxes() {
    return allCheckboxes().filter(":checked");
  }
