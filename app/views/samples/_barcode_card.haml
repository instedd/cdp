.barcode-card
  .barcode-content
    -# .row
    -#   .title
    -#     = @sample_form.institution
    .barcode
      = image_tag barcode_img_data_url(@sample_form.uuid)
    .code
      .uuid
        #{@sample_form.uuid}
    .code
      %strong
        Isolate Name:
      #{@sample_form.isolate_name}
    .code
      %strong
        Inactivation Method:
      #{@sample_form.inactivation_method}
    .code
      %strong
        Production Date:
      #{@sample_form.date_produced.try(:strftime, ("%m/%d/%Y"))}
    .logo
      = image_tag 'cdx-logo-bw.png'
      .label https://cdx.io
  .row.actions
    = link_to print_sample_path(@sample_form), download: "cdx_sample_#{@sample_form.uuid}.pdf", target: "_blank", class: 'btn-link' do
      .icon-print.btn-icon
      %span Print
