.samples-count
  .title
    = check_box_tag 'all_sample_ids'
    %label.row{for: "all_samples_ids"}
    = @batch_form.laboratory_samples.count.to_s + ' ' + "Samples"
  .actions
    =button_tag id: 'bulk-action-print' ,class: 'btn-link', name: 'bulk_action', value: 'print' do
      .icon-print.btn-icon
    =button_tag class: 'btn-link', name: 'bulk_action', value: 'destroy', data: { method: "delete", confirm: "You're about to permanently delete the selected samples. This action CANNOT be undone. Are you sure you want to proceed?" } do
      .icon-trash.btn-icon

- @batch_form.laboratory_samples.each do |sample|
  .col.pe-7.batches-samples
    .samples-row
      .samples-item
        = check_box_tag 'sample_ids[]', sample.id, false, { id: "sample_ids.#{sample.id}" }
        %label.row{for: "sample_ids.#{sample.id}"}
        = sample.uuid
      = link_to edit_laboratory_sample_path(sample.id) do
        .icon-keyboard-arrow-right.icon-gray

= link_to add_laboratory_sample_batch_path, method: :post, class: 'add-samples' do
  .col.pe-7.add-samples
    .icon-circle-plus.icon-blue.icon-margin
    .add-sample-link
      = "ADD SAMPLE"

:javascript
  (function() {
    $("#bulk-action-print").click(function(event) {
      event.preventDefault();

      $.get(
        '#{ Rails.application.routes.url_helpers.bulk_action_laboratory_samples_path }',
        {
          'bulk_action': 'print'
        }
      )
      console.log("HEY!!!");
    });
  })();
