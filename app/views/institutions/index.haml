.row
  .col
    - if @can_create
      = link_to "+", new_institution_path, class: 'btn-add side-link ontop fix', title: 'Add Institution'

    = cdx_table title: 'Institutions' do |t|
      - t.columns do
        %col{:width => "100%"}
      - t.thead do
        %tr
          %th Name
      - t.tbody do
        - @institutions.each do |institution|
          %tr
            %td= link_to institution.name, edit_institution_path(institution)
