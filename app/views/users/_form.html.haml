= form_for(@user) do |f|
  .row
    .col.pe-2
      = f.label :name
    .col
      .value= f.object.full_name

  .row
    .col.pe-2
      = f.label :email
    .col
      .value= f.object.email
  .row
    .col.pe-2
      = f.label :is_active, "Status"
    .col
      = f.check_box :is_active
      = f.label :is_active, "&nbsp; Can access Cdx?".html_safe
  .row.button-actions
    .col
      = f.submit 'Save', class: 'btn-primary'
