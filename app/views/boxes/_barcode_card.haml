.barcode-card.is-box
  .barcode-content
    .barcode(style="float:right")
      = image_tag barcode_svg_data_url(@box.uuid)

    .title
      National Health Laboratory Service
    .code
      Box ID #{@box.uuid}
    .code
      Purpose: #{@box.purpose}
    .logo
      = image_tag 'cdx-logo-bw.png'
      .label https://cdx.io

  .row.actions
    = link_to print_box_path(@box), download: "cdx_box_#{@box.uuid}.pdf", target: "_blank", class: 'btn-link' do
      .icon-print.btn-icon
      %span Print box and sample labels
