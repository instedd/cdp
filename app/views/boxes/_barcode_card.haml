.barcode-card.is-box
  .barcode-content
    .barcode
      = image_tag barcode_svg_data_url(@box.uuid)
    .code
      .uuid
        #{@box.uuid}
    .code
      %strong
        Box:
      = @box.institution.name
    .code
      %strong
        Purpose:
      #{@box.purpose}
    .logo
      = image_tag 'cdx-logo-bw.png'
      .label https://cdx.io


  .row.actions
    = link_to print_box_path(@box), target: "_blank", class: 'btn-link' do
      .icon-print.btn-icon
      %span Print box and sample labels
